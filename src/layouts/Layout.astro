---
import '@/styles/global.scss';

interface Props {
	title?: string;
}

let { title } = Astro.props;
title = title ?? Astro.site?.host ?? "";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>